/*
シナリオID
	Getに関するシナリオ
内容
	Getのテスト
*/
class MapT01 is subclass of TestCase, 『共通定義』
operations 
protected test: () ==> bool
test() == 
	let	m1 = {1 |-> "佐藤圭", 19 |-> "佐原伸", 20 |-> "酒匂寛"},
		m2 = {"佐藤圭" |-> 1,  "佐原伸" |-> 19,  "酒匂寛" |-> 20},
		get1 = Map`Get[int, seq of char],
		get2 = Map`Get[seq of char, int]
	in
	return 
		get1(m1)(19) = "佐原伸" and
		get1(m1)(2) = nil and
		get2(m2)("佐原伸") = 19 and
		get2(m2)("A級戦犯小泉純一郎") = nil
;
protected 準備する: () ==> ()
準備する() == テスト名 := "MapT01:\tGetのテスト。";
protected 後始末する: () ==> ()
後始末する() == return;
end MapT01
