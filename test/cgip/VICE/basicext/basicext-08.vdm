system Simple

instance variables
  static public a : A := new A();
  static public b : B := new B();
  -- define the first CPU with fixed priority scheduling and 22E6 MIPS
  CPU1 : CPU := new CPU (<FP>, 44E6);

  static public c : C := new C();
 
operations
  public Simple: () ==> Simple
  Simple () ==
    ( -- deploy a on CPU1
      CPU1.deploy(a,"BT");
      -- deploy b on CPU1
      CPU1.deploy(b,"BT");
      -- deploy c on CPU2
      CPU1.deploy(c,"CT");
    );

end Simple
class B

instance variables

binst : nat := 0;

operations

  IncB: () ==> ()
  IncB() ==
    cycles (10000) (binst := binst + 1);

end B
class C

operations

  async public DOITC: (map nat to nat) * nat ==> nat
  DOITC (mapv,argc) ==
    return mapv(argc) + 89;

end C


class A

operations
  public DOIT: () ==> nat
  DOIT () ==
    (for i= 1 to 9 do skip;
     ANOTHER();
     return YETANOTHER(true,8);
    );

  async ANOTHER: () ==> ()
  ANOTHER() ==
    cycles (1000000000) (||(skip, skip, skip));

  public YETANOTHER: bool * nat ==> nat
  YETANOTHER (t,arg) ==
    (SyncOp();
     return if t then 6 + arg else 999);

  public Test:() ==> nat
  Test() ==
    Simple`a.DOIT();
  
  SyncOp: () ==> ()
  SyncOp() == skip;

sync
  per SyncOp => #req(ANOTHER) > 0

end A
