class B

instance variables

  i : nat := 0

operations

  op : () ==> ()
  op() ==
    i := i + 1;

  public finished : () ==> nat
  finished() == 
    return i;

sync

  per finished => #fin(op) > 5;
--  per op => false

thread

  periodic (1000,1,1,1)(op)

end B

class A

operations

public Test : () ==> nat
Test() ==
 (dcl b : B := new B();
  start(b);
  b.finished())

end A
