class B

instance variables

  i : nat := 0

operations

  op : () ==> ()
  op() ==
    i := i + 1;

  public finished : () ==> nat
  finished() == 
    return i;

sync

  per finished => #fin(op) > 5

thread

  periodic (100,1,1,1)(op)

end B

class A

operations

public Test : () ==> nat
Test() ==
  (dcl b : B := new B();
   start(b);
   duration (200) skip;
   b.finished())

end A
